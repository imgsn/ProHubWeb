@model ProHub.Core.Dtos.Accounts.RoleDto
@{
    ViewData["Title"] = "Add Role";
}
<div class="row">
    <div class="col-sm-12">


        <div class="card">
            <div class="card-header">
                <h5>@ViewData["Title"]</h5>
            </div>
            <form class="form theme-form needs-validation" novalidate asp-controller="Account" asp-action="AddRole">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <div class="mb-3 row">
                                <label class="col-sm-3 col-form-label" asp-for="Id"></label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="text" asp-for="Id" required>
                                    @*		 <span asp-validation-for="Id" class="invalid-feedback"></span>
                                    *@
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-sm-3 col-form-label" asp-for="RoleName"></label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="text" asp-for="RoleName" required>

                                </div>
                            </div>



                        </div>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <div class="col-sm-9 offset-sm-3">
                        <button class="btn btn-primary" type="submit">Submit</button>
                        <input class="btn btn-light" type="reset" value="Cancel">
                    </div>
                </div>
            </form>
        </div>


    </div>

</div>
@section Scripts {

		@{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }


<script src="~/assets/js/form-validation-custom.js"></script>
<script src="~/assets/js/tooltip-init.js"></script>

	}
